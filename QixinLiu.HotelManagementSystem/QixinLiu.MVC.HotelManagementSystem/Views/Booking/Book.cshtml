@model ApplicationCore.Models.BookingResponseModel

<form asp-controller="booking" asp-action="Book" asp-route-id="@Model.Id" method="post">
   

    <div class="form-group">
        <label asp-for="RoomNO" class="control-label">Room Number</label>
        <input type="number" asp-for="RoomNO" class="form-control" placeholder="@Model.RoomNO">
    </div>
    <div class="form-group">
        <label asp-for="CName" class="control-label">Customer Name</label>
        <input type="text" asp-for="CName" class="form-control" placeholder="@Model.CName">
    </div>

    <div class="form-group">
        <label asp-for="Address" class="control-label">Address</label>
        <input type="text" asp-for="Address" class="form-control" placeholder="@Model.Address">
    </div>

    <div class="form-group">
        <label asp-for="Phone" class="control-label">Phone Number</label>
        <input type="text" asp-for="Phone" class="form-control" placeholder="@Model.Phone">
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="@Model.Email">
    </div>

    <div class="form-group">
        <label asp-for="CheckIn" class="control-label">Check In Date</label>
        <input type="datetime" asp-for="CheckIn" class="form-control" placeholder="@Model.CheckIn">
    </div>

    <div class="form-group">
        <label asp-for="TotalPersons" class="control-label">Total Persons</label>
        <input type="number" asp-for="TotalPersons" class="form-control" placeholder="@Model.TotalPersons">
    </div>

    <div class="form-group">
        <label asp-for="BookingDays" class="control-label">Booking Days</label>
        <input type="number" asp-for="BookingDays" class="form-control" placeholder="@Model.BookingDays">
    </div>

    <div class="form-group">
        <label asp-for="Advance" class="control-label">Advance</label>
        <input type="number" step="0.01" asp-for="Advance" class="form-control" placeholder="@Model.Advance">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
