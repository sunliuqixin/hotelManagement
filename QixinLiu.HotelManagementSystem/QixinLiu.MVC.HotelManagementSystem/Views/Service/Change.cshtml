@model ApplicationCore.Models.ServiceResponseModel

<form asp-controller="Service" asp-action="Change" asp-route-id="@Model.Id" method="post">

    <div class="form-group">
        <label asp-for="RoomNO" class="control-label">Room Number</label>
        <input type="number" asp-for="RoomNO" class="form-control" placeholder="@Model.RoomNO">
    </div>
    <div class="form-group">
        <label asp-for="SDESC" class="control-label">Service Description</label>
        <input type="text" asp-for="SDESC" class="form-control" placeholder="@Model.SDESC">
    </div>
    <div class="form-group">
        <label asp-for="Amount" class="control-label">Service Charges</label>
        <input type="number" step="0.01" asp-for="Amount" class="form-control" placeholder="@Model.Amount">
    </div>
    <div class="form-group">
        <label asp-for="ServiceDate" class="control-label">Service Date</label>
        <input type="datetime-local"  asp-for="ServiceDate" class="form-control" placeholder="@Model.ServiceDate">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
